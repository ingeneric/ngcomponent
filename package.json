{
  "name": "@ingeneric/ngcomponent",
  "version": "5.2.0",
  "description": "A clean React-like abstraction for rendering non-Angular components within an Angular app.",
  "main": "dist/ngcomponent.js",
  "typings": "dist/ngcomponent.d.ts",
  "scripts": {
    "build": "npm run clean && npm run lint && tsc -p tsconfig.build.json",
    "clean": "rm -f dist/*",
    "lint": "tslint --project tsconfig.json",
    "prepublishOnly": "npm test",
    "pretest": "npm run build",
    "tdd": "jest --watch",
    "test": "jest",
    "watch": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/coatue-oss/ngcomponent.git"
  },
  "keywords": [
    "angular",
    "component",
    "react",
    "directive",
    "props",
    "state",
    "controller"
  ],
  "author": "Boris Cherny <boris@performancejs.com>",
  "contributors": [
    "Chris Khoo <chris.khoo@gmail.com>"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/coatue-oss/ngcomponent/issues"
  },
  "homepage": "https://github.com/coatue-oss/ngcomponent#readme",
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "ngimport": "^1.0.0",
    "ts-jest": "^29.1.1",
    "tslint": "^5.9.1",
    "tslint-no-circular-imports": "^0.2.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@types/angular": "^1.6.42",
    "angular": "^1.6.9"
  },
  "type": "module"
}
