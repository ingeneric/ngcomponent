{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "skipLibCheck": true
  },
  "files": [
    "./src/ngcomponent.ts",
    "./src/ngcomponent.test.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
